<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#fffcfcfc">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:paddingLeft="2dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/profilePicture"
            android:src="@drawable/profile_picture"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_marginRight="10dp" />
        <TextView
            android:id="@+id/userName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/profilePicture"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="5dp"
            android:text="Tóth Marcell"
            android:textColor="#223" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/profilePicture"
            android:layout_below="@id/userName"
            android:textStyle="normal"
            android:textColor="#889"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"
            android:text="JSBG2I" />
    </RelativeLayout>
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rowCount="3"
        app:columnCount="2">
        <Button
            android:id="@+id/messagesButton"
            android:text="Üzenetek"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_gravity="fill" />
        <Button
            android:id="@+id/calendarButton"
            android:text="Órarend"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_gravity="fill" />
        <Button
            android:id="@+id/coursesButton"
            android:text="Kurzusok"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_gravity="fill" />
        <Button
            android:id="@+id/examsButton"
            android:text="Vizsgák"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_gravity="fill" />
        <Button
            android:id="@+id/semestersButton"
            android:text="Félévek"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_gravity="fill" />
        <Button
            android:id="@+id/periodsButton"
            android:text="Időszakok"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_gravity="fill" />
    </android.support.v7.widget.GridLayout>
</LinearLayout>